  "git": {
    "default": {
      "version": "2.44.0",
      "terminal_min_version": "1.3.0",
      "install": [
        {
          "action": "run",
          "fn": "os",
          "value": "helo",
          "key": "os_name"
        },
        {
          "action": "download",
          "url": "http://127.0.0.1/git-2.44.0-{os_name}.tar.gz",
          "key": "git_tar"
        },
        {
          "action": "extract",
          "file": "{git_tar}",
