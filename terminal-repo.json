{
  "self": {
    "description": "this is self package mean terminal",
    "default": {
      "version": "1.4.0",
      "terminal_min_version": "1.4.0",
      "install": [
        {
          "action": "download",
          "url": "https://github.com/javadamin1/terminal.php/releases/download/v1.4.0/terminal-v1.4.0.zip",
          "key": "self_zip"
        },
        {
          "action": "sync",
          "file": "{self_zip}",
          "target": ".",
          "excludes": [
            "terminal-repo.json",
            "tools/",
            "cache/",
            ".terminal_env",
            ".git/"
          ]
        }
      ],
      "uninstall": []
    }
  },
  "composer": {
    "description": " This tool is used to install PHP packages",
    "default": {
      "version": "2.7.0",
      "terminal_min_version": "1.3.0",
      "install": [
        {
          "action": "download",
          "url": "https://getcomposer.org/download/latest-stable/composer.phar",
          "key": "downloaded_file"
        },
        {
          "action": "shell",
          "cmd": "chmod +x {downloaded_file}"
        },
        {
          "action": "mv",
          "target": "{downloaded_file}",
          "path": "composer",
          "key": "move_file"
        },
        {
          "action": "symlink",
          "target": "{move_file}",
          "link": "composer"
        }
      ],
      "uninstall": []
    },
    "2.7.0": {
      "version": "2.7.0",
      "install": [
        {
          "action": "download",
          "url": "https://getcomposer.org/download/latest-stable/composer.phar",
          "key": "downloaded_file"
        },
        {
          "action": "shell",
          "cmd": "chmod +x {downloaded_file}"
        },
        {
          "action": "mv",
          "target": "{downloaded_file}",
          "path": "composer",
          "key": "move_file"
        },
        {
          "action": "symlink",
          "target": "{move_file}",
          "link": "composer"
        }
      ]
    }
  },
